Sub SendReminderEmail()
    Dim OutApp As Object
    Dim OutMail As Object
    Dim ws As Worksheet
    Dim rng As Range
    Dim cell As Range
    
    ' Set the worksheet
    Set ws = ThisWorkbook.Sheets("March'24") ' Replace "March'24" with your sheet name
    
    ' Set the range to check (excluding header row)
    Set rng = ws.Range("L2:L" & ws.Cells(ws.Rows.Count, "L").End(xlUp).Row)
    
    ' Create Outlook application object
    Set OutApp = CreateObject("Outlook.Application")
    
    ' Loop through each cell in the range
    For Each cell In rng
        ' Check if column T in the current row is empty or 0
        If IsEmpty(ws.Cells(cell.Row, "T")) Or ws.Cells(cell.Row, "T").Value = 0 Then ' Assuming T is the 20th column (offset by 19 from L)
            ' Check if the email address exists
            If cell.Value <> "" Then
                ' Create a new email
                Set OutMail = OutApp.CreateItem(0)
                
                ' Set email properties
                With OutMail
                    .To = cell.Value ' Email address in column L
                    .Subject = "final test 1.0 Reminder: Please update your information"
                    .Body = "Dear User," & vbNewLine & vbNewLine & _
                            "This is a reminder to update your information in the Excel sheet." & vbNewLine & _
                            "Thank you." & vbNewLine & vbNewLine & _
                            "Regards," & vbNewLine & "Your Company Name"
                    .Send ' Send the email
                End With
                
                ' Release the email object
                Set OutMail = Nothing
                
                ' Add a delay of 5 seconds
                Application.Wait Now + TimeValue("00:00:05")
            End If
        End If
    Next cell
    
    ' Release the Outlook application object
    Set OutApp = Nothing
End Sub


