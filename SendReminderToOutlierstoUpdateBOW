Sub SendReminderToOutliersBookOfWork()
    Dim OutApp As Object
    Dim OutMail As Object
    Dim ws As Worksheet
    Dim rng As Range
    Dim cell As Range
    Dim lastRow As Long
    Dim currentDate As Date
    Dim currentMonth As String
    
    ' Set the worksheet
    Set ws = ThisWorkbook.Sheets("March'24")
    
    ' Get the current date
    currentDate = Date
    
    ' Get the name of the current month
    currentMonth = Format(currentDate, "mmmm")
    
    ' Set the range to check (excluding header row)
    lastRow = ws.Cells(ws.Rows.Count, "L").End(xlUp).Row
    Set rng = ws.Range("L2:L" & lastRow)
    
    ' Create Outlook application object
    Set OutApp = CreateObject("Outlook.Application")
    
    ' Loop through each cell in the range
    For Each cell In rng
        ' Check if there is an email address in the cell
        If Not IsEmpty(cell.Value) Then
            ' Check if column O in the current row is blank
            If ws.Cells(cell.Row, "O").Value = "" Then
                ' Create a new email
                Set OutMail = OutApp.CreateItem(0)
                
                ' Set email properties
                With OutMail
                    .To = cell.Value ' Email address in column L
                    .Subject = "Auto Reminder: Update Your Book of Work by EOD Today"
                    .Body = "Hi " & ws.Cells(cell.Row, "E").Value & "," & vbCrLf & vbCrLf & _
                            "You missed to update the BOW for " & currentMonth & "." & vbCrLf & _
                            "Kindly update it by EOD today." & vbCrLf & vbCrLf & _
                            "Link to update the BOW: https://geminisolutionsindpvtltd.sharepoint.com/:x:/s/DC-EJ-DevSecOps/EVOhKmVIB3dHig0dDOi5N7EBWAw2H-CkLqn1VzFDJV0S9g?e=XLiGOy" & vbCrLf & vbCrLf & _
                            "Thanks and Regards," & vbCrLf & "Kabir Sharma" & vbCrLf & "BA-L2" & vbCrLf & vbCrLf & _
                            "Note: This is an autogenerated Email"
                    .Send ' Send the email
                End With
                
                ' Release the email object
                Set OutMail = Nothing
                
                ' Add a delay of 5 seconds
                Application.Wait Now + TimeValue("00:00:05")
            End If
        End If
    Next cell
    
    ' Release the Outlook application object
    Set OutApp = Nothing
End Sub
