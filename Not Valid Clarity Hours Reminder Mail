Sub SendReminderEmailApril_NotValid()
    Dim OutApp As Object
    Dim OutMail As Object
    Dim ws As Worksheet
    Dim rng As Range
    Dim cell As Range
    
    ' Set the worksheet
    Set ws = ThisWorkbook.Sheets("April'24") ' Replace "April'24" with your sheet name
    
    ' Set the range to check (excluding header row)
    Set rng = ws.Range("AA2:AA" & ws.Cells(ws.Rows.Count, "AA").End(xlUp).Row)
    
    ' Create Outlook application object
    Set OutApp = CreateObject("Outlook.Application")
    
    ' Loop through each cell in the range
    For Each cell In rng
        ' Check if the value in column AA is "Not Valid"
        If cell.Value = "Not Valid" Then
            ' Check if the email address exists in the corresponding row
            If ws.Cells(cell.Row, "L").Value <> "" Then
                ' Create a new email
                Set OutMail = OutApp.CreateItem(0)
                
                ' Set email properties
                With OutMail
                    .To = ws.Cells(cell.Row, "L").Value ' Email address in column L
                    .Subject = "Autogenerated Mail: Clarity hours not valid"
                    .Body = "Hi " & ws.Cells(cell.Row, "E").Value & "," & vbCrLf & vbCrLf & _
                            "Your clarity hours are Not Valid. Kindly update them at the earliest." & vbCrLf & vbCrLf & _
                            "You can access the clarity hours sheet at:" & vbCrLf & _
                            "https://geminisolutionsindpvtltd.sharepoint.com/:x:/s/DC-EJ-DevSecOps/ESa3m7j_tlVBiDKrjyHhey4BAg29PYJWqp3APQiyzcRVjw?e=VhCiTN" & vbCrLf & vbCrLf & _
                            "Thanks and Regards," & vbCrLf & "Kabir Sharma" & vbCrLf & "BA L-2" & vbCrLf & vbCrLf & _
                            "Note: This is an autogenerated email."
                    .Send ' Send the email
                End With
                
                ' Release the email object
                Set OutMail = Nothing
                
                ' Add a delay of 5 seconds
                Application.Wait Now + TimeValue("00:00:05")
            End If
        End If
    Next cell
    
    ' Release the Outlook application object
    Set OutApp = Nothing
End Sub
